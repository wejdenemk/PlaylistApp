<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idRLBSheett"
    android:background="@color/blue_shade_1"
    tools:context=".ListAlbums">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/idTVGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:singleLine="true"
        android:text="Genre"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


  </RelativeLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/idTVAlbumName"
      android:layout_margin="4dp"
      android:padding="4dp"
      android:text="Album Name"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/idTVAlbumName"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_launcher"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/idIVAlbum"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVDesc"
        android:layout_below="@id/idTVAlbumName"
        android:layout_toRightOf="@+id/idIVAlbum"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white"
       />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVSinger"
        android:layout_below="@id/idTVDesc"
        android:layout_toRightOf="@+id/idIVAlbum"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Singer"
        android:textColor="@color/white"
        />
  
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="2"
      android:layout_below="@+id/idIVAlbum">

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="Edit Album"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/idBtnEdit"/>

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="4dp"
          android:text="View Details"
          android:textAllCaps="false"
          android:textColor="@color/white"
          android:id="@+id/idBtnViewDetails"/>









    </LinearLayout>



</RelativeLayout>